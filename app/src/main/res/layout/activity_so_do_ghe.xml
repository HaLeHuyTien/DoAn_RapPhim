<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/txtTenPhim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:text="One Piece: Đại Hội Hải Tặc"
        android:textColor="#121111"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgTenHinh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSuatChieu"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="Suất Chiếu:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenPhim" />

    <TextView
        android:id="@+id/txtPHONGCHIEU"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="Phòng: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSuatChieu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="404dp"
        android:layout_height="318dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTenHinh">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="280dp"
            android:layout_height="225dp"
            android:layout_marginTop="64dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnA1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="1" />

                <Button
                    android:id="@+id/btnA2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="2" />

                <Button
                    android:id="@+id/btnA3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="3" />

                <Button
                    android:id="@+id/btnA4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="4" />

                <Button
                    android:id="@+id/btnA5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="5" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnB1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="1" />

                <Button
                    android:id="@+id/btnB2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="2" />

                <Button
                    android:id="@+id/btnB3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="3" />

                <Button
                    android:id="@+id/btnB4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="4" />

                <Button
                    android:id="@+id/btnB5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="5" />
            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnC1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="1" />

                <Button
                    android:id="@+id/btnC2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="2" />

                <Button
                    android:id="@+id/btnC3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="3" />

                <Button
                    android:id="@+id/btnC4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="4" />

                <Button
                    android:id="@+id/btnC5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnD1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="1" />

                <Button
                    android:id="@+id/btnD2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="2" />

                <Button
                    android:id="@+id/btnD3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="3" />

                <Button
                    android:id="@+id/btnD4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="4" />

                <Button
                    android:id="@+id/btnD5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:backgroundTint="@color/button_background"
                    android:text="5" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="302dp"
            android:layout_height="7dp"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="57dp"
            android:background="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="87dp"
            android:layout_height="18dp"
            android:gravity="center|center_vertical"
            android:text="Màn Hình"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="72dp"
            android:text="A"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="B"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="C"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="D"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtGio"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:gravity="center|fill_horizontal|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/imgTenHinh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtSuatChieu"
        app:layout_constraintTop_toBottomOf="@+id/txtTenPhim" />

    <TextView
        android:id="@+id/txtPhongSDG"
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center|fill_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imgTenHinh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtPHONGCHIEU"
        app:layout_constraintTop_toBottomOf="@+id/txtGio" />

    <Button

        android:id="@+id/btnTiepTuc"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:text="Tiếp Tục"
        android:textColor="#F8F5F5"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.78" />

    <ImageView
        android:id="@+id/imgTenHinh"
        android:layout_width="165dp"
        android:layout_height="211dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="10dp"
        android:background="#E8D109"
        app:layout_constraintBottom_toTopOf="@+id/btnTiepTuc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:background="#F8F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/btnTiepTuc"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Chưa đặt"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Đang chọn"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView34"
        app:layout_constraintTop_toTopOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Đặt rồi"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnTiepTuc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/textView27"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>