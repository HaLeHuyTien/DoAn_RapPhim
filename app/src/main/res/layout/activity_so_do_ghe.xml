<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/txtTenPhim"
        android:layout_width="239dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="One Piece: Đại Hội Hải Tặc"
        android:textColor="#121111"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSuatChieu"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:gravity="center_vertical"
        android:text="Suất Chiếu:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenPhim" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="416dp"
        android:layout_height="379dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTenHinh">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="306dp"
            android:layout_height="206dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnA1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="1" />

                <Button
                    android:id="@+id/btnA2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="2" />

                <Button
                    android:id="@+id/btnA3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="3" />

                <Button
                    android:id="@+id/btnA4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="4" />

                <Button
                    android:id="@+id/btnA5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="5" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnB1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="1" />

                <Button
                    android:id="@+id/btnB2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="2" />

                <Button
                    android:id="@+id/btnB3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="3" />

                <Button
                    android:id="@+id/btnB4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="4" />

                <Button
                    android:id="@+id/btnB5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="5" />
            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnC1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="1" />

                <Button
                    android:id="@+id/btnC2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="2" />

                <Button
                    android:id="@+id/btnC3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="3" />

                <Button
                    android:id="@+id/btnC4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="4" />

                <Button
                    android:id="@+id/btnC5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnD1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="1" />

                <Button
                    android:id="@+id/btnD2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="2" />

                <Button
                    android:id="@+id/btnD3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="3" />

                <Button
                    android:id="@+id/btnD4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="4" />

                <Button
                    android:id="@+id/btnD5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_ghe"
                    android:backgroundTint="#F8F2F2"
                    android:text="5" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="302dp"
            android:layout_height="7dp"
            android:background="#FF5722"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="87dp"
            android:layout_height="18dp"
            android:layout_marginTop="84dp"
            android:gravity="center|center_vertical"
            android:text="Màn Hình"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="72dp"
            android:text="A"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="B"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="C"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="D"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:background="#E8D109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:background="#F8F2F2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:background="#0BE13B"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:text="Chưa đặt"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:text="Đang chọn"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toEndOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:text="Đặt rồi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/textView29" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtGio"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:gravity="center|fill_horizontal|center_vertical"
        android:text="17:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtSuatChieu"
        app:layout_constraintTop_toBottomOf="@+id/txtTenPhim" />

    <Button

        android:id="@+id/btnTiepTuc"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="#F62B2B"
        android:text="Tiếp Tục"
        android:textColor="#F8F5F5"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <ImageView
        android:id="@+id/imgTenHinh"
        android:layout_width="165dp"
        android:layout_height="211dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTenPhim"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>