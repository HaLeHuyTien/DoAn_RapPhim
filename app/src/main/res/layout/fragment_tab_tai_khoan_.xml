<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".packageDangKyDangNhap.packageDangNhap.packageThongTinUser.TabTaiKhoan_Fragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabBar_Fragment"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#B3E5FC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabThongTin_Fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabGiaoDich_Fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giao Dịch" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerTabTaiKhoan_Fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabBar_Fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>